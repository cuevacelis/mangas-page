{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "./",
        "paths": {
            "@assets/*": [
                "./assets/*"
            ],
            "@components/*": [
                "./components/*"
            ],
            "@context/*": [
                "./context/*"
            ],
            "@data/*": [
                "./data/*"
            ],
            "@features/*": [
                "./features/*"
            ],
            "@hooks/*": [
                "./hooks/*"
            ],
            "@layouts/*": [
                "./layouts/*"
            ],
            "@lib/*": [
                "./lib/*"
            ],
            "@api/*": [
                "./pages/api/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@styles/*": [
                "./styles/*"
            ],
            "@utils/*": [
                "./utils/*"
            ]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}